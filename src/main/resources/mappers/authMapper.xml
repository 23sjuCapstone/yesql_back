<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="auth">
    <insert id="insertUser" parameterType="UserDTO" useGeneratedKeys="true" keyProperty="userCd" >
        INSERT INTO USER (
                    USER_ID,
                    USER_PASSWORD
        )
        VALUES (
                #{userId},
                #{userPassword}
        )
    </insert>

    <select id="selectDuplicatedId" parameterType="String" resultType="String">
        SELECT
                USER_ID
        FROM
                USER
        WHERE
                USER_ID = #{userId}
    </select>

    <select id="selectLogin" parameterType="String" resultType="UserDTO">
        SELECT
                *
        FROM
                USER
        WHERE
                USER_ID = #{userId}

    </select>

    <select id="selectCd" parameterType="String" resultType="String">
        SELECT
                USER_CD
        FROM
                USER
        WHERE
                USER_ID = #{userId}
    </select>

    <insert id="insertUserDatabase" parameterType="hashmap" useGeneratedKeys="true" keyProperty="dbCd">
        INSERT INTO USERDATABASE (
                    USER_CD,
                    DB_NAME
        )
        VALUES (
                    #{userCd},
                    #{dbName}
        )
    </insert>

    <select id="findDB" parameterType="String" resultType="UserDatabaseDTO">
        SELECT
            DB_NAME
        FROM
            USER U
        INNER JOIN USERDATABASE UD
                ON U.USER_CD = UD.USER_CD
        WHERE USER_ID = #{userId}
    </select>
</mapper>